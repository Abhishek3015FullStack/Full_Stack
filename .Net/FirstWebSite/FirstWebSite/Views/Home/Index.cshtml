@{
    ViewData["Title"] = "Home Page";

}

<div class="text-center">

    <form id="myform" class="was-validated" novalidate>
        <div class="row">
            <div class="col-lg-4">
                <label id="" for="FirstName">FirstName</label>
               <input type="text" name="FirstName" id="FirstName" pattern="[a-zA-Z]{3,}" class="form-control"/>
                 <div class="invalid-feedback">
                    this is required
                 </div>
                 <div class="valid-feedback">
                     this is valid
                 </div>
            </div>
            <div class="col-lg-4">
                <label id="" for="LastName">LastName</label>
                <input type="text" name="LastName" id="LastName" pattern="[a-zA-Z]{3,}" class="form-control" />
                <div class="invalid-feedback">
                    this is required
                </div>
                <div class="valid-feedback">
                    this is valid
                </div>
            </div>
            <div class="col-lg-4">
                <label id="" for="Address">Address</label>
                <input type="text" name="Address" id="Address" pattern="[a-zA-Z]{3,}" class="form-control" />
                <div class="invalid-feedback">
                    this is required
                </div>
                <div class="valid-feedback">
                    this is valid
                </div>
            </div>
            <div>
                <input type="button" name="submit" id="submit" value="submit" class="btn btn-primary"/>
            </div>
        </div>
    </form>
</div>
